<div class="row-fluid">
  <div class="span2">
    {{#if isPrimary}}
      <span class="label label-important">PRIMARY</span>
    {{else}}
      <span class="label label-warning">SECONDARY</span>
    {{/if}}
  </div>
  <div class="span10">
    {{!-- {{action setFiltersFromErrorSelector errorSelector}} --}}
    <a {{action transitionToSandboxShipments errorSelector}}>
      {{errorMessage}} ({{errorCount}})
    </a>
  </div>
</div>
