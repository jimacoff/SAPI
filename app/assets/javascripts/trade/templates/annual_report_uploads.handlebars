{{view Trade.AnnualReportUploadFormView controllerBinding="controller"}}

<div class="row-fluid">
  <div class="span6">
    <h3>Uploads in progress</h3>
  </div>
  <div class="span6">
    {{confirm-button title="Delete uploads" action="deleteAllUploads"}}
  </div>
</div>
<hr>

<ul>
{{#each controller}}
  <li>
    <a {{action transitionToReportUploadFromList this}}>
      {{this.summary}}
    </a>
    <a href="#" {{action 'deleteUpload' this}} class="pull-right">
      <i class="icon-remove-sign" title="Delete"></i>
    </a>
  </li>
{{else}}
  <li>No uploads found.</li>
{{/each}}
</ul>
