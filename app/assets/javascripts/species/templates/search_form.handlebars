  <div class="links-area">
    {{#view Species.TaxonomyToggle option="cites_eu" valueBinding="controller.taxonomy"}}
    CITES
    {{/view}}
    {{#view Species.TaxonomyToggle option="cms" valueBinding="controller.taxonomy"}}
    CMS
    {{/view}}
  </div>
  <div class="search-form">
    <form action="#" class="search">
      <fieldset>
        {{view Species.TaxonConceptTextField
        valueBinding="controller.taxonConceptQuery"
        id="scientific_name"
        title="search"
        placeholder="Species, higher taxon, synonym or common name..."
        autocomplete="off"
      }}

      {{view Species.TaxonConceptsDropdown
       valueBinding="controller.autoCompleteTaxonConcepts"
       isVisibleBinding="controller.taxonConceptsDropdownVisible"
      }}

      <button {{action "loadTaxonConcepts"}}>Search</button>
    </fieldset>
  </form>
</div>
{{#view Species.GeoEntitiesDropdown}}
  <a href="#">Locations</a>
  <div id="location-area-popup" class="popup-holder01">
    <div class="popup">
      <div class="search-block01">
        <div class="row01">
          {{view Species.GeoEntityTextField
          valueBinding="controller.geoEntityQuery"
          placeholder="Type to filter countries or regions"
          autocomplete="off"
          }}
          <input type="submit" value="submit" />
        </div>
        <strong class="title01">SELECTED LOCATIONS</strong>
       {{collection Species.SelectedGeoEntitiesCollectionView
       contentBinding="controller.selectedGeoEntities"}}
    </div>
    <div class="list-holder">
      <ul>
        <li>
          <h2>REGIONS</h2>
          {{collection Species.GeoEntitiesCollectionView
          contentBinding="controller.autoCompleteRegions"}}
        </li>
        <li>
          <h2>COUNTRIES</h2>
          {{collection Species.GeoEntitiesCollectionView
          contentBinding="controller.autoCompleteCountries"}}
        </li>
      </ul>
    </div>
  </div>
  </div>

{{/view}}

{{outlet search}}
