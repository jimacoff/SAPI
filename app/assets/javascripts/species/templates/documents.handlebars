{{partial 'species/tabs'}}
{{outlet search}}

<div class="container">

  <div class="results-heading">
    Search Results for Taxon:
  </div>

  <div class="result-block">
    <table class="grouped-results-table">
      <thead class="grouped-header">
        <tr>
          <th></th>
          <th>EVENT TYPE</th>
          <th>DOCUMENT TYPE</th>
          <th>No of DOCUMENTS<th>
        </tr>
      </thead>
      <tbody>
        {{documents-results documents=content.cites_cop_docs event='CITES CoP'}}
        {{documents-results documents=content.ec_srg_docs event='EcSrg'}}
        {{documents-results documents=content.cites_ac_docs event='CITES Animals Committee'}}
        {{documents-results documents=content.cites_pc_docs event='CITES Plants Committee'}}
        {{documents-results documents=content.other_docs event='Other'}}
      </tbody>
    </table>

  </div>


</div>
