{{partial 'species/tabs'}}
{{outlet search}}

<div class="container">
  <div class="result-block">
    <table class="grouped-results-table">
      <thead class="grouped-header">
        <tr>
          <th></th>
          <th>MEETING TYPE</th>
          <th>No of DOCUMENTS<th>
        </tr>
      </thead>
      <tbody>
        {{documents-row meeting_type="EC SRG"
          eventType="EcSrg"
          dataController=controller
          loadMore=controller.ecSrgDocsLoadMore
          documents=controller.ecSrgDocuments
          isLoading=controller.ecSrgDocsIsLoading}}
        {{documents-row meeting_type="CITES CoP"
          eventType="CitesCop"
          dataController=controller
          loadMore=controller.citesCopDocsLoadMore
          documents=controller.citesCopDocuments
          isLoading=controller.citesCopDocsIsLoading}}
        {{documents-row meeting_type="CITES Animals Committee"
          eventType="CitesAc"
          dataController=controller
          loadMore=controller.citesAcDocsLoadMore
          documents=controller.citesAcDocuments
          isLoading=controller.citesAcDocsIsLoading}}
        {{documents-row meeting_type="CITES Plants Committee"
          eventType="CitesPc"
          dataController=controller
          loadMore=controller.citesPcDocsLoadMore
          documents=controller.citesPcDocuments
          isLoading=controller.citesPcDocsIsLoading}}
        {{documents-row meeting_type="Other"
          eventType="other"
          dataController=controller
          loadMore=controller.otherDocsLoadMore
          documents=controller.otherDocuments
          isLoading=controller.otherDocsIsLoading}}
      </tbody>
    </table>
  </div>
</div>
