<aside class="id-manual-cover__banner">
  <img alt="logo-cites" src="<%="#{Rails.root.to_s}"%>/app/assets/images/checklist/logo-CITES-blue.svg" class='id-manual-cover__banner-logo' >
  <%= t('id_manual_cover.header') %>
</aside>
<main class="id-manual-cover__margins">
  <header>
    <h1 class="id-manual-cover__title">
      <%= t('id_manual_cover.title') %>
    </h1>

    <div class="id-manual-cover__metadata">
      <div class="id-manual-cover__metadata-row">
        <span><%= t('id_manual_cover.taxon_label') %>:</span>
        <em class="id-manual-cover__bold id-manual-cover__italic">
          <%= taxon_name %>
        </em>
      </div>

      <div class="id-manual-cover__metadata-row">
        <span><%= t('id_manual_cover.date_label') %>:</span>
        <em class="id-manual-cover__bold">
          <%= Time.now.strftime('%d/%m/%Y') %>
        </em>
      </div>

      <div class="id-manual-cover__metadata-row">
        <span><%= t('id_manual_cover.website_label') %>:</span>
        <em class="id-manual-cover__bold">
          <%= t('id_manual_cover.checklist_url') %>
        </em>
      </div>
    </div>
  </header>

  <div class="id-manual-cover__bottom">
    <div class="id-manual-cover__disclaimer">
      <%= t('id_manual_cover.disclaimer').html_safe %>

      <label class="id-manual-cover__disclaimer-label">
        <%= t('id_manual_cover.citation_label') %>:
      </label>
      <p>
        <%= t('id_manual_cover.citation_text', date: Time.now.strftime('%d/%m/%Y')) %>
      </p>

      <label class="id-manual-cover__disclaimer-label">
        <%= t('id_manual_cover.copyright_label') %>:
      </label>
      <p><%= t('id_manual_cover.copyright_text') %></p>
    </div>

    <footer class="id-manual-cover__footer">
      <img alt="logo-cites-black" src="<%="#{Rails.root.to_s}"%>/app/assets/images/checklist/logo-CITES-black.svg" class='id-manual-cover__footer-logo id-manual-cover__footer-logo--cites' >
      <img alt="logo-eu" src="<%="#{Rails.root.to_s}"%>/app/assets/images/checklist/eu-black.svg" class='id-manual-cover__footer-logo id-manual-cover__footer-logo--eu' >
      <img alt='logo-unep' src="http://s3.amazonaws.com/wcmc.logo/UNEP_WCMC_logo_black.svg", class="id-manual-cover__footer-logo id-manual-cover__footer-logo--unepwcmc" %>
    </footer>
  </div>
</main>
