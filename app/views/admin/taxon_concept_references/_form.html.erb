<ul class="nav nav-tabs">
  <li class="active"><a href="#search">Search for a reference</a></li>
  <li><a href="#new">Create new reference</a></li>
</ul>

<% form_url = admin_taxon_concept_taxon_concept_references_url(@taxon_concept) %>

<%= form_for [:admin, @taxon_concept, @reference], :url => form_url, :remote => true do |f| %>
  <%= error_messages_for(@reference) %>

  <div class="tab-content">
    <div class="tab-pane fade in active" id="search">
      <label>Search by title, author or year:</label>
      <%= text_field_tag 'reference_search', nil, :class => 'typeahead' %>
      <%= text_field_tag 'reference[id]', nil, :class => 'hidden' %>
    </div>

    <div class="tab-pane fade" id="new">
      <label>Title</label>
      <%= f.text_field :title %>

      <label>Author</label>
      <%= f.text_field :author %>

      <label>Year</label>
      <%= f.text_field :year %>

      <label>Is standard?</label>
      <%= check_box_tag 'taxon_concept_reference[data][usr_is_std_ref]' %>
    </div>
  </div>

<% end %>
