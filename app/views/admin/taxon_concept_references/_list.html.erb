<% if @taxon_concept && @taxon_concept.references.count > 0 %>
  <% @taxon_concept.references.each do |r| %>
    <%= r.title %> (<%= r.author %>, <%= r.year %>)
    <%= link_to delete_icon,
      admin_taxon_concept_taxon_concept_reference_url(@taxon_concept, r),
      :confirm => "Are you sure?", :method => :delete %>
    <br>
  <% end %>
<% else %>
  No references defined.
<% end %>
