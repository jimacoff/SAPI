<h1>Change Types <a href="#new-change_type" role="button" class="btn new-button">Add new change_type</a></h1>

<div id="admin-in-place-editor-new" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="new-change_type-label" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="new-change_type-laber">Add new change type</h3>
  </div>
  <div class="modal-body">

    <div id="msg"></div>
    <%= form_for :change_type, :url => api_change_types_path do |f| %>
      <label>Designation</label><%= f.select :designation_id, options_from_collection_for_select(@designations, :id, :name) %><br />
      <label>Name</label><%= f.text_field :name %><br />
    <% end %>

  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary save-button">Save changes</button>
  </div>
</div>

<table id="admin-in-place-editor" class="table table-bordered table-striped" style="clear: both">
  <thead>
    <th width="20%">Designation</th>
    <th width="10%">Name</th>
  </thead>
  <tbody>
    <% @change_types.each do |change_type| -%>
      <tr>
        <td>
            <a href="#" class="editable editable-click editable-required" data-type="select" data-resource="change_type" data-name="designation_id"
              data-placeholder="Required" data-original-title="Enter the change type's designation" data-source="/api/designations/"
              data-url="/api/change_types/<%= change_type.id %>" data-pk="<%= change_type.id %>">
              <%= change_type.designation.name %>
            </a>
        </td>
        <td>
          <a href="#" class="editable editable-click editable-required" data-type="text" data-resource="change_type" data-name="name"
            data-placeholder="Required" data-original-title="Enter the change type's name"
            data-url="/api/change_types/<%= change_type.id %>" data-pk="<%= change_type.id %>">
            <%= change_type.name %>
          </a>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>

