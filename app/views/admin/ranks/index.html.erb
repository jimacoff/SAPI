<h1>Ranks <a href="#new-rank" role="button" class="btn new-button">Add new rank</a></h1>

<div id="admin-in-place-editor-new" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="new-rank-label" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="new-rank-laber">Add new rank</h3>
  </div>
  <div class="modal-body">

    <div id="msg"></div>
    <%= form_for :rank, :url => api_ranks_path do |f| %>
      <label>Parent</label> <%= f.select :parent_id, options_from_collection_for_select(@ranks, :id, :name) %><br />
      <label>Name</label><%= f.text_field :name %><br />
    <% end %>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary save-button">Save changes</button>
  </div>
</div>

<table id="admin-in-place-editor" class="table table-bordered table-striped" style="clear: both">
  <thead>
    <th width="20%">Name</th>
  </thead>
  <tbody>

    <% @ranks.each do |rank| -%>
      <tr>
        <td>
          <a href="#" class="editable editable-click editable-required" data-type="text" data-resource="rank" data-name="name"
            data-placeholder="Required" data-original-title="Enter the rank name"
            data-url="/api/ranks/<%= rank.id %>" data-pk="<%= rank.id %>">
            <%= rank.name %>
          </a>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>

