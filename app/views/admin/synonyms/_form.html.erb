<% form_url = if @synonym.new_record? %>
  <% admin_taxon_concept_synonyms_url(@taxon_concept) %>
<% else %>
  <% admin_taxon_concept_synonym_url(@taxon_concept, @synonym) %>
<% end %>
<%= form_for [:admin, @taxon_concept, @synonym], :url => form_url, :remote => true do |f| %>
  <%= error_messages_for(@synonym) %>
  <%= f.hidden_field :name_status, :value => 'S'%>
  <%= f.hidden_field :designation_id, :value => @taxon_concept.designation_id %>
  <div class="control-group">
    <label>Rank</label>
    <%= f.select :rank_id,
      options_from_collection_for_select(
        @ranks, :id, :name,
        @synonym && @synonym.rank_id
      )
    %>
  </div>
  <div class="control-group">
    <%= f.fields_for :taxon_name do |ff| %>
      <label>Synonym</label>
      <%= ff.text_field :scientific_name %>
    <% end %>
  </div>
  <div class="control-group">
    <label>Author & year</label>
    <%= f.text_field :author_year %>
  </div>
<% end %>