<thead>
  <th>Id</th>
  <th>Class</th>
  <th>Taxon Concept (status)</th>
  <th>Author year</th>
  <th>CMS Name</th>
  <th>CMS Author</th>
  <th>Details</th>
</thead>
<tbody>
  <% collection.each do |map| -%>
    <% tc = map.taxon_concept %>
    <tr class="<%= map.details["match"].try(:downcase) %>">
      <td><%= tc.id %></td>
      <td><%= tc.data["class_name"] %></td>
      <td><%= link_to "#{tc.full_name} (#{tc.name_status})",
        admin_taxon_concept_names_path(tc) %></td>
      <td><%= tc.author_year %></td>
      <td><%= map.cms_taxon_name %></td>
      <td><%= map.cms_author %></td>
      <td>
        <ul>
          <li>Distributions in S+:<%= map.details['distributions_splus'] %></li>
          <li>Distributions in CMS:<%= map.details['distributions_cms'] %></li>
        </ul>
      </td>
    </tr>
  <% end -%>
</tbody>
