<h1>Languages <a href="#new-language" role="button" class="btn new-button">Add new language</a></h1>

<div id="admin-new-record-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="new-language-label" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="new-language-laber">Add new language</h3>
  </div>
  <div class="modal-body">

    <div id="msg"></div>
    <%= form_for :language, :url => api_languages_path do |f| %>
      <label>Iso code 1</label><%= f.text_field :iso_code1 %><br />
      <p>Name</p>
      <label>EN</label> <%= f.text_field :name_en %><br />
      <label>ES</label> <%= f.text_field :name_es %><br />
      <label>FR</label> <%= f.text_field :name_fr %><br />
    <% end %>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary save-button">Save changes</button>
  </div>
</div>

<table id="admin-in-place-editor" class="table table-bordered table-striped" style="clear: both">
  <thead>
    <th width="10%">iso_code1</th>
    <th width="20%">Name</th>
  </thead>
  <tbody>

    <% @languages.each do |language| -%>
      <tr>
        <td>
          <a href="#" class="editable editable-click editable-required" data-type="text" data-resource="language" data-name="iso_code1"
            data-placeholder="Required" data-original-title="Enter the language iso_code1"
            data-url="/api/languages/<%= language.id %>" data-pk="<%= language.id %>">
            <%= language.iso_code1 %>
          </a>
        </td>
        <td>
          <dl>
            <dt>EN</dt>
            <dd>
            <a href="#" class="editable editable-click" data-type="text" data-resource="language" data-name="name_en"
              data-original-title="Enter the name in English"
              data-url="/api/languages/<%= language.id %>" data-pk="<%= language.id %>">
              <%= language.name_en %>
            </a>
            </dd>
            <dt>ES</dt>
            <dd>
            <a href="#" class="editable editable-click" data-type="text" data-resource="language" data-name="name_es"
              data-original-title="Enter the name in Spanish"
              data-url="/api/languages/<%= language.id %>" data-pk="<%= language.id %>">
              <%= language.name_es %>
            </a>
            </dd>
            <dt>FR</dt>
            <dd>
            <a href="#" class="editable" data-type="text" data-resource="language" data-name="name_fr"
              data-original-title="Enter the name in French"
              data-url="/api/languages/<%= language.id %>" data-pk="<%= language.id %>">
              <%= language.name_fr %>
            </a>
            </dd>
          </dl>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>

