<% if @taxon_concept.current_quotas.count > 0 %>
  <table class="quota">
    <thead>
      <th>Appx</th>
      <th>Type</th>
      <th>Effective at</th>
      <th>Current</th>
      <th>Party</th>
    </thead>
    <tbody>
    <% @taxon_concept.current_quotas.each do |quota| %>
      <tr>
        <td>
          <%= quota.species_listing && quota.species_listing.abbreviation %>
        </td>
        <td><%= quota.change_type.name %></td>
        <td><%= quota.effective_at_formatted %></td>
        <td>
        <%= form_for [:admin, @taxon_concept, @designation, quota], :remote => true do |f| %>
          <%= f.check_box :is_current %>
        <% end %>
        </td>
        <td>
          <%= quota.geo_entity && quota.geo_entity.iso_code2 %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
