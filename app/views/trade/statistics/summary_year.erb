<h1>Trade Statistics</h1>

<ul id="trade-stats-tabs" class="nav nav-tabs">

  <li class="<%= 'active' %>">
    <%= link_to "General Statistics", 'stats' %>
  </li>

  <li class="<%= 'active' %>">
    <%= link_to "Year Statistics", 'year' %>
  </li>

  <li class="<%= 'active' %>">
    <%= link_to "Creation Date Statistics", 'creation' %>
  </li>
</ul>

        <%= form_tag("year", :method => "get") do %> 

      <table class="table table-bordered table-striped ">
        <thead>
          <tr>
            <th>No</th>
            <th>Country</th>
            <th>Year</th>
            <th>Type</th>
          </tr>
        </thead>

    <div class="control-group">
    <%= select_year(@date_selected, :start_year => 1975, :end_year => Time.now.year, :field_name => "yearSelected") %>
    <%= submit_tag("Update", {:class => 'btn btn-primary'})%>
    </div>
    <tbody>

        <%  @countries_reported_by_year.to_enum.with_index(1).each do |country, i| %>
        <tr>
            <th><%= i %></th>
            <th><%= country[:name_en] %></th>
            <th><%= country[:year] %></th>
            <th><%= country[:reporter_type] %></th>
          </tr>
        <% end %>
        </thead>

        </tbody>
    </table>
    <% end %>
